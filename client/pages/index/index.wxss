.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.form_container {
 
  display: flex;
  width:90%;
  flex-direction: column; 
  
}
 .form_line {
    height: 80rpx;
    width:99%;
 
    display: flex;
    flex-direction: row; 
    
}

.form_container .form_line text{
  height: 80rpx;
  width:170rpx;
  padding-top: 20rpx;
  margin :0rpx 1rpx 1rpx  5rpx ;
  font-size: 40rpx;
  color:#000; 
}

 .form_container .form_line input {
  margin :5rpx 1rpx 5rpx  1rpx ;
  height: 70rpx;
  flex:1;
  font-size: 40rpx;
  border: 1rpx solid rgb(217, 217, 217);
  
   background-color:white; 
}
.form_container .form_line  button {
  height: 100rpx;
  width:100%;
  font-size: 40rpx;
  
 
}