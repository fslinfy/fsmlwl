/**app.wxss**/

page {
  background: linear-gradient(to bottom, #fcd33d 0%, #fff6d7 100%);
  height: 100%;
}

page {
  background: #ccc;
  height: 100%;
  width: 100%;
}

.list-item {
  height: 60rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  margin: 0rpx 1rpx 3rpx 1rpx;
  padding: 30rpx;
}
.item-line {
  height: 60rpx;
  display: flex;
  flex-direction: row;
  
  padding: 10rpx;
}
.list-item-row {
  height: 60rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin: 0rpx 1rpx 3rpx 1rpx;
  padding: 30rpx;
}

.list_header {
  display: flex;
  flex-direction: row;
  height: 5px;
  width: 100%;
  background-color: #fcd33d;
}

.list_header_text {
  height: 70rpx;
  width: 100%;
  border: silver;
  border-bottom: 1rpx;
  border-right: 3rpx;
  text-align: center;
  background: linear-gradient(to bottom, #fcd33d 0%, #fff6d7 100%);
}

.list_header_text text {
  padding: 10rpx 0rpx 0rpx 0rpx;
}

.text-black {
  color: black;
}

.text-green {
  color: #10aeff;
}

.text-red {
  color: red;
}

.text-gray {
  color: gray;
}

.item-row {
  display: flex;
  flex-direction: row;
}

.item-row text {
  flex: 1;
}

.delete_line {
  border: 0rpx solid #ddd;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
  padding-bottom: 12rpx;
}

.container {
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border: red;
  background-color: #eee;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.container-center {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #ddd;
}

.post {
  float: right;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  border: 0 solid #fff;
  border-radius: 600rpx;
  margin: 16rpx;
  box-shadow: 8rpx 3rpx 3rpx #ccc;
}

.xscroll-y {
  height: 100%;
}

.cell_3 {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: white;
  position: relative;
  overflow-x: scroll;
  overflow-y: hidden;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #ececec;
}

.select_all_btn {
  padding: 20rpx;
  color: #158447;
  font-size: 26rpx;
}

.checkbox_group {
  width: 15%;
  height: 80rpx;
  float: left;
  overflow: hidden;
  text-align: center;
}

.cell_3_body {
  width: 85%;
}

.checkbox_icon {
  width: 60rpx;
  height: 60rpx;
  line-height: 55rpx;
  font-size: 48rpx;
  font-family: '微软雅黑', Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', Arial, sans-serif;
  text-align: center;
  display: inline-block;
  border: 1rpx solid #ececec;
  vertical-align: middle;
  border-radius: 600rpx;
}

.checkbox_1_selected {
  background: #158447;
  color: #fff;
}

.item-col {
  flex: 10;
  display: flex;
  background-color: gold;
  flex-direction: row;
}

.item-col text {
  margin: 3rpx 3rpx 0rpx 10rpx;
  background-color: whitesmoke;
}

/*************      form_search     *******/

.search_panel {
  padding: 1rpx 5rpx 15rpx 1rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  background: linear-gradient(to bottom, #fcd33d 0%, #fcd33d 100%);
}

.search_line {
  height: 75rpx;
  background: white;
  display: flex;
  flex-direction: row;
}

.search_line input {
  margin: 5rpx 5rpx 1rpx 1rpx;
  border: 1rpx solid rgb(217, 217, 217);
  border-radius: 5rpx;
  font-size: 36rpx;
  height: 65rpx;
  flex: 1;
}

.search_line text {
  margin: 6rpx 5rpx 0rpx 3rpx;
  font-size: 36rpx;
}

.search_line button {
  height: 75rpx;
  margin: 5rpx 5rpx 5rpx 5rpx;
  font-size: 36rpx;
  text-align: center;
}

/******************   form   css */

.form_container {
  display: flex;
  flex-direction: column;
  padding: 5rpx 5rpx 5rpx 5rpx;
  background: linear-gradient(to bottom, #fcd33d 0%, #fff6d7 100%);
}

.form_container form {
  flex: 1;
  display: flex;
  padding: 5rpx 5rpx 5rpx 5rpx;
  flex-direction: column;
  background-color: white;
}

.form_container .form_line text {
  height: 80rpx;
  width: 130rpx;
  padding-top: 20rpx;
  margin: 10rpx 1rpx 1rpx 5rpx;
  font-size: 30rpx;
  color: slategrey;
}

.form_container .form_line checkbox {
  height: 80rpx;
  width: 80rpx;
  padding-top: 20rpx;
}

.form_container .form_line input {
  margin: 5rpx 1rpx 5rpx 1rpx;
  height: 80rpx;
  flex: 1;
  font-size: 36rpx;
  border: 1rpx solid rgb(217, 217, 217);
  border-radius: 5rpx;
}

.form_container .form_line  button {
  height: 110rpx;
  width: 100%;
  font-size: 40rpx;
  background-color: #ffc800;
  margin-bottom: 20rpx;
}

.form_container .delete_line image {
  width: 60rpx;
  height: 60rpx;
  padding-left: 30rpx;
  padding-top: 10rpx;
}

.form_container .delete_line text {
  padding-top: 20rpx;
  width: 80rpx;
  height: 60rpx;
}

.form {
  flex: 1;
  display: flex;
  padding: 5rpx 5rpx 5rpx 5rpx;
  flex-direction: column;
  background: linear-gradient(to bottom, #fcd33d 0%, #fff6d7 100%);
}

.form_line {
  height: 80rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
}

.form_header {
  height: 150rpx;
  width: 100%;
  background: linear-gradient(to bottom, #fcd33d 0%, #fff6d7 100%);
}

.form_line input {
  margin: 5rpx 5rpx 0rpx 5rpx;
  font-size: 32rpx;
  border: 1rpx solid rgb(217, 217, 217);
  border-radius: 5rpx;
}

.form_line text {
  margin: 10rpx 0rpx 0rpx 0rpx;
  font-size: 32rpx;
}

.form_line checkbox {
  height: 80rpx;
  width: 80rpx;
  padding-top: 20rpx;
}
